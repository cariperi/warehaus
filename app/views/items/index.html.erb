<h1>Items Inventory</h1>

<div>
  <%= link_to "Add New Item", new_item_path %>
</div>

<div>
  <table>
    <thead>
      <tr>
        <th><%= link_to "Item Name", :sort => "name" %></th>
        <th>UPC </th>
        <th>Quantity Available </th>
        <th>Price </th>
        <th>Weight </th>
        <th>Description </th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.name, item_path(item.id) %></td>
          <td><%= item.upc %></td>
          <td><%= item.quantity %></td>
          <td><%= format_price(item) %></td>
          <td><%= format_weight(item) %></td>
          <td><%= item.description %></td>
          <td><%= link_to "Edit", edit_item_path(item.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
